<!DOCTYPE html>
<html>
  <head>
    <title>To do List</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbo-track': 'reload', defer: true %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
  </head>
  <body>
    <nav class="header-container text-light">
      <h1 class="header-title">To do List</h1>
      <div class="d-flex justify-content-end mb-4">
        <% if user_signed_in? %>
          <div class="d-flex justify-content-between align-items-center w-100">
            <span class="text-light fw-bold">Bem-vindo, <%= current_user.email %>!</span>
            <%= button_to 'Sair', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
          </div>

        <% else %>
          <%= link_to 'Entrar', new_user_session_path, class: 'btn btn-primary btn-lg' %>
          <%= link_to 'Registrar', new_user_registration_path, class: 'btn btn-secondary btn-lg me-2 custom-register-btn' %>
        <% end %>
      </div>
    </nav>


    <div class="container mt-4">
      <%= yield %>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>