<div class="page-body d-flex flex-column align-items-center justify-content-center" style="min-height: 60vh;">
  <h1 class="text-center my-4" style="font-size: 36px;">Log in</h1>

  <div class="card p-4 shadow-sm custom-card no-hover" style="max-width: 700px; width: 100%;">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.label :email, 'E-mail', class: 'form-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Digite seu e-mail' %>
      </div>

      <div class="mb-3">
        <%= f.label :password, 'Senha', class: 'form-label' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Digite sua senha' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-3 form-check">
          <%= f.check_box :remember_me, class: 'form-check-input' %>
          <%= f.label :remember_me, 'Lembrar de mim', class: 'form-check-label' %>
        </div>
      <% end %>

      <div class="d-flex justify-content-between">
        <%= f.submit 'Log in', class: 'btn btn-primary w-100 me-2' %>
      </div>
    <% end %>
    
    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
