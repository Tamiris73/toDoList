<h1 class="text-center my-4">Listas de Tarefas</h1>

<div class="text-center mb-4">
  <%= link_to 'Nova Lista', new_list_path, class: 'btn btn-primary' %>
</div>

<div class="container">
  <div class="row g-3">
    <% @lists.each do |list| %>
      <div class="col-md-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title d-flex justify-content-between align-items-center">
              <%= link_to list.name, list_path(list), class: 'text-decoration-none text-dark' %>
              <i class="fas fa-tasks text-primary"></i>
            </h5>
            <p class="card-text text-muted">Criada em: <%= list.created_at.strftime("%d/%m/%Y") %></p>
            <div class="d-flex justify-content-between">
              <%= link_to edit_list_path(list), class: 'btn btn-sm btn-outline-secondary' do %>
                <i class="fas fa-pen"></i> Editar
              <% end %>
                <%= button_to list_path(list), method: :delete, data: { confirm: 'Tem certeza que deseja excluir esta lista e todas as suas tarefas?' }, class: 'btn btn-sm btn-outline-danger text-decoration-none' do %>
  <i class="fas fa-trash"></i> Excluir
<% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
