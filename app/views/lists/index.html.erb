<div class="header-container text-light">
  <h1 class="header-title">Listas de Tarefas</h1>
  <div class="text-end mb-4">
    <%= link_to 'Nova Lista', new_list_path, class: 'btn btn-primary btn-lg' %>
  </div>
</div>

<div class="container">
  <div class="row g-3">
    <% @lists.each do |list| %>
      <div class="col-md-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title d-flex justify-content-between align-items-center">
              <%= link_to list.name, list_path(list), class: 'text-decoration-none text-dark' %>
              <i class="fas fa-tasks text-primary"></i>
            </h5>
            <p class="card-text text-muted">Criada em: <%= list.created_at.strftime("%d/%m/%Y") %></p>
            <div class="d-flex justify-content-end"> 
              <%= link_to edit_list_path(list), class: 'btn btn-sm btn-outline-secondary me-2' do %>
                <i class="fas fa-pen"></i>
              <% end %>
              <%= button_to list_path(list), method: :delete, data: { confirm: 'Tem certeza que deseja excluir esta lista e todas as suas tarefas?' }, class: 'btn btn-sm btn-outline-danger' do %>
                <i class="fas fa-trash"></i> 
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>