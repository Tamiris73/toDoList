<div class="page-body d-flex flex-column align-items-center justify-content-center" style="min-height: 60vh;">
  <h1 class="text-center my-4" style="font-size: 36px;">Editar Lista</h1>

  <div class="card p-4 shadow-sm custom-card no-hover" style="max-width: 700px; width: 100%;">
    <%= form_with model: @list, local: true do |form| %>
      <div class="mb-4">
        <%= form.label :name, 'Nome da Lista', class: 'form-label' %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>
      <div class="d-flex justify-content-between">
        <%= form.submit 'Atualizar Lista', class: 'btn btn-primary w-100 me-2' %>
        <%= link_to 'Editar Tarefas', list_path(@list), class: 'btn btn-info w-100' %>
      </div>
    <% end %>
    <div class="mt-3">
      <%= link_to 'Cancelar', lists_path, class: 'btn btn-secondary w-100' %>
    </div>
  </div>
</div>